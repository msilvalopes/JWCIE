<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="hibernatemarcel.Usuarios" table="usuarios">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="login" type="string">
            <column name="login" length="50" not-null="true" unique="true" />
        </property>
        <property name="email" type="string">
            <column name="email" length="100" not-null="true" />
        </property>
        <property name="nome" type="string">
            <column name="nome" length="100" not-null="true" />
        </property>
        <property name="senha" type="string">
            <column name="senha" length="64" not-null="true" />
        </property>
        <property name="flAdmin" type="int">
            <column name="fl_admin" not-null="true" />
        </property>
    </class>
</hibernate-mapping>